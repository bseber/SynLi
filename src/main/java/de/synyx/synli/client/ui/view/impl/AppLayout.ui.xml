<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:v="urn:import:de.synyx.synli.client.ui.view.impl">
	
	<ui:style>
	.content {
		margin: 2em;
	}
	</ui:style>
	
	<g:HTMLPanel>
	
		<h1>Synyx Library</h1>
		
		<g:SimplePanel>
			<v:MenuView ui:field="menuView"></v:MenuView>
		</g:SimplePanel>

		<g:SimplePanel ui:field="westPanel"></g:SimplePanel>
		
		<g:ScrollPanel>
			<g:SimplePanel ui:field="contentPanel" styleName="{style.content}"></g:SimplePanel>
		</g:ScrollPanel>
	
	</g:HTMLPanel>
	
</ui:UiBinder> 